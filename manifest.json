{
  "manifest_version": 3,
  "name": "Vettx's Facebook Marketplace",
  "version": "1.0",
  "description": "Chrome extension that syncs Facebook marketplace conversations to Vettx.",
  "icons": {
    "16": "assets/icon/not-enabled/icon-16.png",
    "48": "assets/icon/not-enabled/icon-48.png",
    "128": "assets/icon/not-enabled/icon-128.png"
  },
  "author": ["nicolas.escandon@uao.edu.co", "juan_diego.cuevas@uao.edu.co"],
  "action": {
    "default_popup": "index.html",
    "default_title": "Vettx Extension"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
